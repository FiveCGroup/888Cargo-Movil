{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "controllers/**/*",
    "models/**/*",
    "routes/**/*",
    "services/**/*",
    "middlewares/**/*",
    "utils/**/*",
    "validators/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
