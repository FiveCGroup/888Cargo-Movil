# ==========================================
# CONFIGURACIÓN DE CONTENIDO
# ==========================================
CONTENT_LANGUAGE=es
DOCUMENTATION_LEVEL=detailed  # basic, detailed, comprehensive
INCLUDE_EXAMPLES=true
